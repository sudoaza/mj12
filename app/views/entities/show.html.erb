<div class="row">

<div class="col-md-8">

<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @entity.title %>
</p>

<ul>
<% @entity.meta.each do |meta| %>
  <li><%= meta %></li>
<% end %>
</ul>

<% all_links = @entity.a_links | @entity.b_links %>

<% all_links.each do |link| %>
<p>
<%= raw(link) %>
</p>

<ul>
<% link.meta.each do |meta| %>
  <li><%= meta %></li>
<% end %>
</ul>

<%end %>

<%= link_to 'Edit', edit_entity_path(@entity) %> |
<%= link_to 'Back', entities_path %>

</div>

<%= render template: "layouts/sidebar.html.erb" %>

</div>
